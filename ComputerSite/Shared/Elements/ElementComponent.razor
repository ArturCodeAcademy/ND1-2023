<div class="card">
	<div class="card m-3 cardBoxShadow">
		<div class="card-header text-center cardHeaderStyle">
			<h3>@Element.Name</h3>
		</div>
		<div class="text-center cardBodyStyle">
			@foreach (string line in Element.Description.Split("\n"))
			{
				<h5>@line</h5>
			}
		</div>
		@if (ShowAddButton)
		{
			<div class="row">
				<div class="col">
					<button class="btn btn-primary col-12" @onclick="OnAddClick">Add</button>
				</div>
			</div>
		}
	</div>
</div>
